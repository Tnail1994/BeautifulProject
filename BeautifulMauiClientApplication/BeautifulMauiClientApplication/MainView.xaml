<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BeautifulMauiClientApplication.MainView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:beautifulMauiClientApplication="clr-namespace:BeautifulMauiClientApplication"
    xmlns:global="clr-namespace:"
    Title="Main Page"
    x:DataType="beautifulMauiClientApplication:MainViewModel">

    <Grid RowDefinitions="Auto,*">
        <Button
            Command="{Binding LoadItemsCommand}"
            IsEnabled="{Binding IsNotBusy}"
            Text="Load Items" />

        <ActivityIndicator
            Grid.Row="1"
            HorizontalOptions="Center"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center" />

        <CollectionView
            Grid.Row="1"
            IsVisible="{Binding IsNotBusy}"
            ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="beautifulMauiClientApplication:ItemObj">
                    <Label Padding="10" Text="{Binding Name}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>