<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BeautifulMauiClientApplication.LoginView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="LoginView"
    Width="320"
    Height="450">
    <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*">
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Text="Username" />
        <Entry Grid.Row="0" Grid.Column="1" />
        <Label
            Grid.Row="1"
            Grid.Column="0"
            Text="Stay logged in" />
        <CheckBox Grid.Row="1" Grid.Column="1" />
        <Button
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Text="Login" />
    </Grid>
</ContentPage>